<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reportOnConditionActionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/reportOnConditionActionButtons"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/reportOnConditionViewButton"
                android:layout_width="120pt"
                android:layout_height="0pt"
                android:layout_weight=".25"
                android:text="@string/roc_view"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/reportOnConditionCreateButton"
                android:layout_width="120pt"
                android:layout_height="0pt"
                android:layout_weight=".25"
                android:text="@string/roc_create"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
</LinearLayout>
